{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "linterOptions": {
    "exclude": ["shims/*"]
  },
  "rules": {
    "prettier": true,
    "no-implicit-dependencies": [
      true,
      "dev",
      [
        "@blueprintjs/core",
        "bluebird",
        "classnames",
        "electron",
        "fs-extra",
        "i18next",
        "lodash",
        "prop-types",
        "react",
        "react-i18next",
        "react-fontawesome",
        "react-redux",
        "react-virtualized",
        "redux",
        "redux-observers",
        "reselect",
        "styled-components",
        "views"
      ]
    ],
    "no-submodule-imports": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-snake-case",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "no-console": [true, "log"]
  }
}
